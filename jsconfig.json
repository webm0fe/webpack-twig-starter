{
    "compilerOptions": {
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/js/components/*"],
            "@utils/*": ["src/js/utils/*"],
            "@libs/*": ["src/js/libs/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}